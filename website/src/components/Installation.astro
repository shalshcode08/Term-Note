---

<section id="installation" class="py-20 px-6">
  <div class="max-w-4xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">Get Started</h2>
      <p class="text-gray-400 text-lg">
        Install TermNote in seconds
      </p>
    </div>

    <!-- Installation Steps -->
    <div class="space-y-6">
      <!-- Step 1 -->
      <div class="bg-dark-light border border-gray-800 rounded-lg p-6 hover:border-primary/50 transition-colors">
        <div class="flex items-start gap-4">
          <div class="flex-shrink-0 w-8 h-8 bg-primary/20 text-primary rounded-full flex items-center justify-center font-bold">
            1
          </div>
          <div class="flex-1">
            <h3 class="text-xl font-semibold mb-3">Clone the repository</h3>
            <div class="relative group">
              <pre class="bg-dark border border-gray-700 rounded-lg p-4 overflow-x-auto"><code class="text-sm font-mono text-gray-300">git clone https://github.com/shalshcode08/Term-Note.git
cd term-note</code></pre>
              <button
                class="absolute top-2 right-2 p-2 bg-dark-light border border-gray-700 rounded hover:bg-gray-800 opacity-0 group-hover:opacity-100 transition-opacity"
                onclick="navigator.clipboard.writeText('git clone https://github.com/shalshcode08/Term-Note.git\ncd term-note')"
                title="Copy to clipboard"
              >
                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                </svg>
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Step 2 -->
      <div class="bg-dark-light border border-gray-800 rounded-lg p-6 hover:border-primary/50 transition-colors">
        <div class="flex items-start gap-4">
          <div class="flex-shrink-0 w-8 h-8 bg-primary/20 text-primary rounded-full flex items-center justify-center font-bold">
            2
          </div>
          <div class="flex-1">
            <h3 class="text-xl font-semibold mb-3">Build the application</h3>
            <div class="relative group">
              <pre class="bg-dark border border-gray-700 rounded-lg p-4 overflow-x-auto"><code class="text-sm font-mono text-gray-300">make build</code></pre>
              <button
                class="absolute top-2 right-2 p-2 bg-dark-light border border-gray-700 rounded hover:bg-gray-800 opacity-0 group-hover:opacity-100 transition-opacity"
                onclick="navigator.clipboard.writeText('make build')"
                title="Copy to clipboard"
              >
                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                </svg>
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Step 3 -->
      <div class="bg-dark-light border border-gray-800 rounded-lg p-6 hover:border-primary/50 transition-colors">
        <div class="flex items-start gap-4">
          <div class="flex-shrink-0 w-8 h-8 bg-primary/20 text-primary rounded-full flex items-center justify-center font-bold">
            3
          </div>
          <div class="flex-1">
            <h3 class="text-xl font-semibold mb-3">Run TermNote</h3>
            <div class="relative group">
              <pre class="bg-dark border border-gray-700 rounded-lg p-4 overflow-x-auto"><code class="text-sm font-mono text-gray-300">make run</code></pre>
              <button
                class="absolute top-2 right-2 p-2 bg-dark-light border border-gray-700 rounded hover:bg-gray-800 opacity-0 group-hover:opacity-100 transition-opacity"
                onclick="navigator.clipboard.writeText('make run')"
                title="Copy to clipboard"
              >
                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                </svg>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Requirements -->
    <div class="mt-12 bg-dark-light/50 border border-gray-800 rounded-lg p-6">
      <h3 class="text-lg font-semibold mb-4 flex items-center gap-2">
        <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        Requirements
      </h3>
      <ul class="space-y-2 text-gray-400">
        <li class="flex items-center gap-2">
          <svg class="w-4 h-4 text-primary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
          Go 1.20 or higher
        </li>
        <li class="flex items-center gap-2">
          <svg class="w-4 h-4 text-primary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
          Make (for build automation)
        </li>
        <li class="flex items-center gap-2">
          <svg class="w-4 h-4 text-primary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
          Terminal with Unicode support
        </li>
        <li class="flex items-center gap-2">
          <svg class="w-4 h-4 text-secondary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
          JetBrains Mono font (optional, for best experience)
        </li>
      </ul>
    </div>

    <!-- Quick Tip -->
    <div class="mt-8 bg-primary/10 border border-primary/30 rounded-lg p-6">
      <div class="flex gap-4">
        <svg class="w-6 h-6 text-primary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
        </svg>
        <div>
          <h4 class="font-semibold mb-1">Tip</h4>
          <p class="text-gray-400">
            After installation, press <code class="px-2 py-1 bg-dark border border-gray-700 rounded text-sm font-mono">Ctrl+H</code> in the editor to see all keyboard shortcuts
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

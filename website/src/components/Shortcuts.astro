<section id="shortcuts" class="py-20 px-6 bg-dark-light/50">
  <div class="max-w-6xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">Keyboard Shortcuts</h2>
      <p class="text-gray-400 text-lg">
        Master TermNote with these powerful keyboard shortcuts
      </p>
    </div>

    <!-- Shortcuts Grid -->
    <div class="grid md:grid-cols-2 gap-8">
      <!-- Basic Commands -->
      <div class="bg-dark-light border border-gray-800 rounded-lg p-6">
        <h3 class="text-xl font-semibold mb-6 flex items-center gap-2">
          <span class="w-2 h-2 bg-primary rounded-full"></span>
          Basic Commands
        </h3>
        <div class="space-y-4">
          <div class="flex items-center justify-between">
            <span class="text-gray-400">Create new note</span>
            <kbd class="px-3 py-1.5 bg-dark border border-gray-700 rounded text-sm font-mono text-primary">Ctrl+N</kbd>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-gray-400">List all notes</span>
            <kbd class="px-3 py-1.5 bg-dark border border-gray-700 rounded text-sm font-mono text-primary">Ctrl+L</kbd>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-gray-400">Save current note</span>
            <kbd class="px-3 py-1.5 bg-dark border border-gray-700 rounded text-sm font-mono text-primary">Ctrl+S</kbd>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-gray-400">Show help</span>
            <kbd class="px-3 py-1.5 bg-dark border border-gray-700 rounded text-sm font-mono text-primary">Ctrl+H</kbd>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-gray-400">Go back / Close</span>
            <kbd class="px-3 py-1.5 bg-dark border border-gray-700 rounded text-sm font-mono text-primary">Esc</kbd>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-gray-400">Quit application</span>
            <kbd class="px-3 py-1.5 bg-dark border border-gray-700 rounded text-sm font-mono text-primary">Ctrl+C</kbd>
          </div>
        </div>
      </div>

      <!-- Markdown Formatting -->
      <div class="bg-dark-light border border-gray-800 rounded-lg p-6">
        <h3 class="text-xl font-semibold mb-6 flex items-center gap-2">
          <span class="w-2 h-2 bg-secondary rounded-full"></span>
          Markdown Formatting
        </h3>
        <div class="space-y-4">
          <div class="flex items-center justify-between">
            <span class="text-gray-400">Insert bullet point</span>
            <kbd class="px-3 py-1.5 bg-dark border border-gray-700 rounded text-sm font-mono text-secondary">Ctrl+B</kbd>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-gray-400">Insert todo checkbox</span>
            <kbd class="px-3 py-1.5 bg-dark border border-gray-700 rounded text-sm font-mono text-secondary">Ctrl+T</kbd>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-gray-400">Toggle todo</span>
            <kbd class="px-3 py-1.5 bg-dark border border-gray-700 rounded text-sm font-mono text-secondary">Ctrl+D</kbd>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-gray-400">Insert H1 header</span>
            <kbd class="px-3 py-1.5 bg-dark border border-gray-700 rounded text-sm font-mono text-secondary">Ctrl+1</kbd>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-gray-400">Insert H2 header</span>
            <kbd class="px-3 py-1.5 bg-dark border border-gray-700 rounded text-sm font-mono text-secondary">Ctrl+2</kbd>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-gray-400">Insert H3 header</span>
            <kbd class="px-3 py-1.5 bg-dark border border-gray-700 rounded text-sm font-mono text-secondary">Ctrl+3</kbd>
          </div>
        </div>
      </div>

      <!-- Advanced Features -->
      <div class="bg-dark-light border border-gray-800 rounded-lg p-6">
        <h3 class="text-xl font-semibold mb-6 flex items-center gap-2">
          <span class="w-2 h-2 bg-accent rounded-full"></span>
          Advanced Features
        </h3>
        <div class="space-y-4">
          <div class="flex items-center justify-between">
            <span class="text-gray-400">Insert table</span>
            <kbd class="px-3 py-1.5 bg-dark border border-gray-700 rounded text-sm font-mono text-accent">Alt+T</kbd>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-gray-400">Insert code block</span>
            <kbd class="px-3 py-1.5 bg-dark border border-gray-700 rounded text-sm font-mono text-accent">Alt+C</kbd>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-gray-400">Insert link</span>
            <kbd class="px-3 py-1.5 bg-dark border border-gray-700 rounded text-sm font-mono text-accent">Alt+L</kbd>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-gray-400">Insert image</span>
            <kbd class="px-3 py-1.5 bg-dark border border-gray-700 rounded text-sm font-mono text-accent">Alt+I</kbd>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-gray-400">Insert horizontal rule</span>
            <kbd class="px-3 py-1.5 bg-dark border border-gray-700 rounded text-sm font-mono text-accent">Alt+R</kbd>
          </div>
        </div>
      </div>

      <!-- File Management -->
      <div class="bg-dark-light border border-gray-800 rounded-lg p-6">
        <h3 class="text-xl font-semibold mb-6 flex items-center gap-2">
          <span class="w-2 h-2 bg-primary rounded-full"></span>
          File Management
        </h3>
        <div class="space-y-4">
          <div class="flex items-center justify-between">
            <span class="text-gray-400">Open selected note</span>
            <kbd class="px-3 py-1.5 bg-dark border border-gray-700 rounded text-sm font-mono text-primary">Enter</kbd>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-gray-400">Delete note</span>
            <kbd class="px-3 py-1.5 bg-dark border border-gray-700 rounded text-sm font-mono text-primary">D</kbd>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-gray-400">Filter notes</span>
            <kbd class="px-3 py-1.5 bg-dark border border-gray-700 rounded text-sm font-mono text-primary">/</kbd>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-gray-400">Navigate list</span>
            <div class="flex gap-2">
              <kbd class="px-3 py-1.5 bg-dark border border-gray-700 rounded text-sm font-mono text-primary">↑</kbd>
              <kbd class="px-3 py-1.5 bg-dark border border-gray-700 rounded text-sm font-mono text-primary">↓</kbd>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Pro Tip -->
    <div class="mt-12 text-center max-w-2xl mx-auto">
      <div class="inline-flex items-center gap-3 bg-dark-light border border-gray-800 rounded-lg px-6 py-4">
        <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
        </svg>
        <p class="text-gray-400">
          Lists auto-continue on <kbd class="px-2 py-1 bg-dark border border-gray-700 rounded text-xs font-mono text-primary mx-1">Enter</kbd> - bullets, todos, and numbered lists flow naturally
        </p>
      </div>
    </div>
  </div>
</section>
